/**
 * Custom Styles
 *
 * ref: https://v1.vuepress.vuejs.org/config/#index-styl
 */

h1, h2, h3, h4, h5, h6, .sidebar-heading, .site-name, .nav-link
  font-family 'Baloo Tamma 2'

.theme-container.no-sidebar
  background-image url(/assets/img/bg.svg)
  background-size contain
  background-repeat repeat-y

.theme-container .home
  padding-top 0
  text-align center

.theme-container .home .hero img
  max-width 450px !important
  padding 2rem 0 0 !important
  margin 0 auto !important

.theme-container .home .hero h1
  margin 1.25rem auto

.theme-container .home .hero .description
  margin 1.25rem auto

.theme-container .home h2
  width 100%
  border 0
  padding 0
  margin 0 auto

.theme-container .home h3
  font-size 1.15rem
  margin-bottom 0

.theme-container .home p
  margin-top 0

.theme-container .home .footer
  padding 0
  border 0

.home .action-button
  display inline-block
  box-sizing border-box
  font-size 1.1rem
  padding 0.8rem 1.6rem
  margin 0 1rem
  border-radius 4px
  transition background-color 0.1s ease
  color #fff
  background-color $accentColor

.home .action-button.github
  background-color #333

.home .charts
  display flex
  justify-content space-between
  flex-wrap wrap
  gap 30px 10px
  margin 5rem 0

.home .chart
  display flex
  flex-direction column
  gap .9rem

.home .chart a
  display inline-block
  background-image linear-gradient(135deg, #48c, #f57)
  border-radius 50%
  padding 20px
  max-width 80px
  transition-duration 0.6s

.home .chart svg
  width 80px
  height 80px

.home .chart p
  font-size 13px
  margin-bottom 0

.home .chart:hover a
.home .chart:focus a
  transform translateY(-12px)

.home .chart.hidden
  display none

.home .features
  margin 5rem 0 !important
  padding 0 !important
  border 0 !important
  gap 20px 10px

.home .features p
  margin 0 auto 1rem

.home .contributors
  display flex
  justify-content center
  flex-wrap: wrap;
  gap 2rem 5rem
  margin 5rem 0

.home .contributor img
  width 150px
  height 150px
  border-radius 50%

.home .contributor h3
  font-weight 700

.nav-links .repo-link
.sidebar .nav-links .repo-link
  display none !important

.page-edit
  text-align center
  padding-top 3rem

table
  margin-right auto
  margin-left auto
  width fit-content

.theme-default-content code
  color #333

div[class*="language-"]
  box-shadow 10px 10px 20px 0 grey
  margin-block 20px

.theme-container.example-page h1
.theme-container.example-page h2
.theme-container.example-page h3
  text-align center
  border-bottom 0

.theme-container.example-page h2
  margin 1rem auto
  padding 0

.theme-container.example-page h3
  margin 2rem auto
  padding 0

.theme-container.example-page .examples
  display grid
  grid-template-columns 1fr 1fr
  column-gap 50px

@media (max-width: 959px)
  .theme-container.example-page .examples
    grid-template-columns 1fr
    row-gap 50px

.theme-container.builder-page h1
  text-align center
